<%- model_class = AwsPlatform -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class='col-lg-6'>
<div class='well bs-component'>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_NO) %>:</strong></dt>
  <dd><%= @aws_platform.PLATFORM_NO %></dd>
  <dt><strong><%= model_class.human_attribute_name(:HOST) %>:</strong></dt>
  <dd><%= @aws_platform.HOST %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PORT) %>:</strong></dt>
  <dd><%= @aws_platform.PORT %></dd>
  <dt><strong><%= model_class.human_attribute_name(:SECURE) %>:</strong></dt>
  <dd><%= @aws_platform.SECURE %></dd>
  <dt><strong><%= model_class.human_attribute_name(:EUCA) %>:</strong></dt>
  <dd><%= @aws_platform.EUCA %></dd>
  <dt><strong><%= model_class.human_attribute_name(:VPC) %>:</strong></dt>
  <dd><%= @aws_platform.VPC %></dd>
  <dt><strong><%= model_class.human_attribute_name(:REGION) %>:</strong></dt>
  <dd><%= @aws_platform.REGION %></dd>
  <dt><strong><%= model_class.human_attribute_name(:AVAILABILITY_ZONE) %>:</strong></dt>
  <dd><%= @aws_platform.AVAILABILITY_ZONE %></dd>
  <dt><strong><%= model_class.human_attribute_name(:VPC_ID) %>:</strong></dt>
  <dd><%= @aws_platform.VPC_ID %></dd>
</dl>

<div class="form-actions">
	<div class= 'col-lg-offset-4')>
  		<%= link_to t('.back', :default => t("helpers.links.back")),
              		aws_platforms_path, :class => 'btn'  %>
  		<%= link_to t('.edit', :default => t("helpers.links.edit")),
              		edit_aws_platform_path(@aws_platform), :class => 'btn btn-primary' %>
  		<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              		aws_platform_path(@aws_platform),
              		:method => 'delete',
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
									   :default => 'Are you sure?')) },
		   :class => 'btn btn-danger' %>
	</div>
</div>

</div>
</div>
