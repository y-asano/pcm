<%- model_class = Platform -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class='well bs-component'>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_NO) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_NO %></dd>
  <dt><strong>Platform名:</strong></dt>
  <dd><%= @platform.PLATFORM_NAME %></dd>
  <dt><strong>表示名:</strong></dt>
  <dd><%= @platform.PLATFORM_NAME_DISP %></dd>
  <dt><strong>短縮表示名:</strong></dt>
  <dd><%= @platform.PLATFORM_SIMPLENAME_DISP %></dd>
  <dt><strong>接続タイプ:</strong></dt>
  <dd><%= @platform.INTERNAL %></dd>
  <dt><strong>Proxy接続:</strong></dt>
  <dd><%= @platform.PROXY %></dd>
  <dt><strong>Platformタイプ:</strong></dt>
  <dd><%= @platform.PLATFORM_TYPE %></dd>
  <dt><strong>Platformの有効化:</strong></dt>
  <dd><%= @platform.SELECTABLE %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              platforms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_platform_path(@platform), :class => 'btn btn-primary' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              platform_path(@platform),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</div>
