<%- model_class = Platform -%>
<div class="page-header">
<h1> <%=t '.title', :default => model_class.model_name.human %> </h1>
</div>

<div class='col-lg-6'>
<div class='well bs-component'>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_NO) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_NO %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_NAME) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_NAME %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_NAME_DISP) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_NAME_DISP %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_SIMPLENAME_DISP) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_SIMPLENAME_DISP %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_INTERNAL) %>:</strong></dt>
  <dd><%= @platform.INTERNAL %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_PROXY) %>:</strong></dt>
  <dd><%= @platform.PROXY %></dd>
  <dt><strong><%= model_class.human_attribute_name(:PLATFORM_TYPE) %>:</strong></dt>
  <dd><%= @platform.PLATFORM_TYPE %></dd>
  <dt><strong><%= model_class.human_attribute_name(:SELECTABLE) %>:</strong></dt>
  <dd><%= @platform.SELECTABLE %></dd>
</dl>

<div class="form-actions">
	<div class= 'col-lg-offset-4')>
  		<%= link_to t('.back', :default => t("helpers.links.back")),
              		platforms_path, :class => 'btn'  %>
  		<%= link_to t('.edit', :default => t("helpers.links.edit")),
              		edit_platform_path(@platform), :class => 'btn btn-primary' %>
  		<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              		platform_path(@platform),
              		:method => 'delete',
			:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
									   :default => 'Are you sure?')) },
	      		:class => 'btn btn-danger' %>
	</div>
</div>

</div>
</div>
