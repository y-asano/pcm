<h1>Platform一覧</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Platform no</th>
      <th>Platform name</th>
      <th>Platform name disp</th>
      <th>Platform simplename disp</th>
      <th>Internal</th>
      <th>Proxy</th>
      <th>Platform type</th>
      <th>Selectable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @platforms.each do |platform| %>
      <tr>
        <td><%= platform.PLATFORM_NO %></td>
        <td><%= platform.PLATFORM_NAME %></td>
        <td><%= platform.PLATFORM_NAME_DISP %></td>
        <td><%= platform.PLATFORM_SIMPLENAME_DISP %></td>
        <td><%= platform.INTERNAL %></td>
        <td><%= platform.PROXY %></td>
        <td><%= platform.PLATFORM_TYPE %></td>
        <td><%= platform.SELECTABLE %></td>
        <td><%= link_to 'Show', platform %></td>
        <td><%= link_to 'Edit', edit_platform_path(platform) %></td>
        <td><%= link_to 'Destroy', platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Platform', new_platform_path ,class:"btn btn-info" %>
