<!DOCTYPE html>
<html>
  <head>
    <title>PCM</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <div class="navbar navbar-default">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Top</a>
        </div>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:controller] == 'users' %>">
              <%= link_to 'User管理', { :controller => "users", :action => "index" }%>
            </li>
            <li class="dropdown <%= 'active' if params[:controller] == 'platforms' %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Platform管理
              <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to '基本設定', { :controller => "platforms", :action => "index" }%></a></li>
                <li class="divider"></li>
                <li class="dropdown-header">詳細設定</li>
                <li><%= link_to 'AWS', { :controller => "aws_platforms", :action => "index" }%></a></li>
              </ul>
            </li>
            <li class="dropdown <%= 'active' if params[:controller] == 'images' %>">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">イメージ管理<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to '基本設定', { :controller => "images", :action => "index" }%></a></li>
                <li class="divider"></li>
                <li class="dropdown-header">詳細設定</li>
                <li><%= link_to 'AWS', { :controller => "aws_images", :action => "index" }%></a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>

      <%= yield %>

    </div>

  </body>
</html>
